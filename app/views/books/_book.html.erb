<div id="<%= dom_id book %>">
  <p>
    <strong><%= t('_book.title') %></strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t('_book.memo') %></strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t('_book.author') %></strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t('_book.picture') %></strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
